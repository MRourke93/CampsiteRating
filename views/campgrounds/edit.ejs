<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
    
        <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="campground[name]" placeholder="Yosemite National Park" value="<%= campground.name %>" required>
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= campground.image %>" required>
            </div>
            <div class="form-group">
                <label for="price">Price per Night</label>
                <input class="form-control" type="number" name="campground[price]" placeholder="10.00" value="<%= campground.price %>" min="0.00" step="0.01">
            </div>            
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA" value="<%= campground.location %>" required>
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input class="form-control" type="text" name="campground[description]" placeholder="Californiaâ€™s Sierra Nevada mountains." value="<%= campground.description %>" >
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>