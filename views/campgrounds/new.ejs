<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Create a New Campground</h1>
    <div style="width: 30%; margin: 25px auto;">
    
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" placeholder="Yosemite National Park" required>
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="image" placeholder="image url" required>
            </div>
            <div class="form-group">
                <label for="price">Price per Night</label>
                <input class="form-control" type="number" name="price" placeholder="10.00" min="0.00" step="0.01">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA" required>
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input class="form-control" type="text" name="description" placeholder="Californiaâ€™s Sierra Nevada mountains.">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground.id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>